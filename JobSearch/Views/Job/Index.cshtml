@model List<JobSearch.Models.Job>

@{
    ViewData["Title"] = "Jobs";
}

<h1>Jobs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Description</td>
                <td>@job.Location</td>
                <td>@job.Salary</td>
            </tr>
        }
    </tbody>
</table>
